.chat-side
  .chat-side__user-name
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__new-group
        = link_to new_group_path do
          = icon('fas','edit', class: 'new-group')
        %li.top-items__icons__edit-user
        = link_to edit_user_path(current_user)  do
          = icon('fas','cog', class: 'edit-user')
  .chat-side__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group__name
            = group.name
        %p.group__latest-message
          = group.show_last_message